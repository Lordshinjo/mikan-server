      {
        "type": "Aiming",
        "zoom": 0.25,
        "condition": { "allOf":[ { "doesNotHaveAttachmentGroup":"ar_sightsandscopes" } ] }
      },
      {
        "type": "PartVisibility",
        "parts": [
          {
            "name": "rail",
            "visible": true,
            "condition": { "allOf":[ { "hasAttachmentGroup":"m16_sightsandscopes" } ] }
          },
          {
            "name": "underrail",
            "visible": true,
