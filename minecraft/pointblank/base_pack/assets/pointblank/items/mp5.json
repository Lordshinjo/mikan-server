          },
          {
            "name": "mp5sd",
            "visible": true,
            "condition": { "allOf":[ { "hasAttachment":"smg_suppressor" } ] }
          },
          {
            "name": "launcher",
            "visible": true,
            "condition": { "allOf":[ { "hasAttachment":"m203launcher" }, { "isGunInHands": true } ] }
          },
          {
            "name": "handguard",
            "visible": false,
            "condition": { "allOf":[ { "hasAttachment":"smg_suppressor" } ] }
          }
        ]
      },
      {
        "type": "Sound",
        "fireSound": "mp5_silenced",
        "fireSoundVolume": 1,
        "condition": { "allOf":[ { "hasAttachment":"smg_suppressor" } ] }
